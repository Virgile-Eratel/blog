---
interface Props {
	text: string;
	variant?: 'primary' | 'secondary' | 'accent' | 'success' | 'warning' | 'error';
	size?: 'sm' | 'md' | 'lg';
	class?: string;
}

const {
	text,
	variant = 'primary',
	size = 'md',
	class: className = ''
} = Astro.props;

const badgeSizeClasses = {
	sm: 'px-2 py-0.5 text-xs',
	md: 'px-2.5 py-1 text-sm',
	lg: 'px-3 py-1.5 text-base'
};

const badgeVariantClasses = {
	primary: 'bg-orange-100 text-orange-800 dark:bg-orange-900 dark:text-orange-200',
	secondary: 'bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-200',
	accent: 'bg-orange-200 text-orange-900 dark:bg-orange-800 dark:text-orange-100',
	success: 'bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200',
	warning: 'bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-200',
	error: 'bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-200'
};

const badgeSize = badgeSizeClasses[size];
const badgeVariant = badgeVariantClasses[variant];
---

<span
	class={`inline-flex items-center rounded-full ${badgeSize} ${badgeVariant} font-medium ${className}`}
>
  {text}
</span>